<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/focus_state"
    android:paddingBottom="16dp"
    >

    <ImageView
        android:id="@+id/history_vertical_banner"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/history_vertical_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/mochiypoppone"
        android:textColor="@color/font_pink"
        app:layout_constraintEnd_toStartOf="@+id/history_vertical_remove_btn"
        app:layout_constraintStart_toEndOf="@+id/history_vertical_banner"
        app:layout_constraintTop_toTopOf="@+id/history_vertical_banner"
        tools:text="VIDEO NAME" />

    <ImageButton
        android:id="@+id/history_vertical_remove_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/button_sel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

    <TextView
        android:id="@+id/history_vertical_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:alpha="0.8"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/history_vertical_banner"
        app:layout_constraintEnd_toEndOf="@+id/history_vertical_banner"
        tools:text="11:11" />
</androidx.constraintlayout.widget.ConstraintLayout>